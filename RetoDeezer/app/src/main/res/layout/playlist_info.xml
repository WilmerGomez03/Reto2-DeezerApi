<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/cover_Track_1"
        android:layout_width="78dp"
        android:layout_height="74dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/track"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/name_Track_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="12dp"
        android:text="Nombre Canción"
        android:textColor="#7640E2"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@+id/cover_Track_1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_Artist_1"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="9dp"
        android:text="Artista Canción"
        android:textColor="#7640E2"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@+id/cover_Track_1"
        app:layout_constraintTop_toBottomOf="@+id/name_Track_1" />

    <TextView
        android:id="@+id/date_Release_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="9dp"
        android:text="Año de lanzamiento"
        android:textColor="#7640E2"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@+id/cover_Track_1"
        app:layout_constraintTop_toBottomOf="@+id/name_Artist_1" />

    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:background="#5212A3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_Release_1"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>